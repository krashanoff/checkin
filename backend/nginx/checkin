# nginx configuration for the checkin app.

server {
    server_name _;
    
    root /home/dev/checkin/checkin/build;

    access_log  /home/dev/access.log;
    error_log   /home/dev/error.log;
    charset     utf-8;

    location / {
        try_files $uri @checkin;
    }

    location @checkin {
        uwsgi_pass unix:///home/dev/checkin/backend/checkin.sock;
        include uwsgi_params;
    }
}