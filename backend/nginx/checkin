# nginx configuration for the checkin app.

server {
    listen  80;

    server_name 192.168.1.14;
    charset     utf-8;

    client_max_body_size    2M;

    location @checkin {
        include uwsgi_params;
        uwsgi_pass unix:///home/dev/checkin/backend/checkin.sock;
    }

    location / {
        try_files $uri @checkin;
    }
}