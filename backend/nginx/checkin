# nginx configuration for the checkin app.

server {
    listen 443 ssl;
    server_name www.shha.krashanoff.com shha.krashanoff.com;

    access_log  /home/dev/access.log;
    error_log   /home/dev/error.log;
    charset     utf-8;

    ssl_certificate /etc/letsencrypt/live/shha.krashanoff.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/shha.krashanoff.com/privkey.pem; # managed by Certbot

    location / {
        try_files $uri @checkin;
    }

    location @checkin {
        uwsgi_pass unix:///home/dev/checkin/backend/checkin.sock;
        include uwsgi_params;
    }

#    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
#    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}


server {
    if ($host = www.shha.krashanoff.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = shha.krashanoff.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name www.shha.krashanoff.com shha.krashanoff.com;
    return 404; # managed by Certbot
}