[Unit]
Description=uWSGI server for checkin system
Requires=network.target
After=network.target

[Service]
TimeoutStartSec=0
RestartSec=10
Restart=always

WorkingDirectory=/home/dev/checkin/backend

User=dev

KillSignal=SIGQUIT
Type=notify
NotifyAccess=all

ExecStart=/usr/bin/uwsgi --ini /home/dev/checkin/backend/checkin.ini

[Install]
WantedBy=multi-user.target